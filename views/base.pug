doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700', rel='stylesheet')

    link(rel='stylesheet', href='/css/style.css')
    link(rel='shortcut icon', type='image/png', href='/img/favicon.png')

    title Natours | #{title}
  body
    header.header
      nav.nav.nav--tours
        a.nav__el(href='/tours') All tours
      .header__logo
        img(src='/img/logo-white.png', alt='Natours logo')
      nav.nav.nav--user
        a.nav__el(href='#') Log in
        a.nav__el.nav__el--cta(href='#') Sign up

    //- content
    block content 
      h1 This is the main heading

    footer.footer
      .footer__logo
        img(src='/img/logo-green.png', alt='Natours logo')
      ul.footer__nav
        li: a(href='#') About Us
        li: a(href='#') Download apps
        li: a(href='#') Become a guide
        li: a(href='#') Careers
        li: a(href='#') Contact
